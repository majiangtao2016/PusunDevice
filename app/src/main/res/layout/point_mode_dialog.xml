<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="900dp"
    android:background="@color/white"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="900dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:text="请选择练习方式"
        android:textColor="#1b2c38"
        android:textSize="35sp"
        />
    <TextView
        android:id="@+id/takePhoto"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center"
        android:text="初级"
        android:textColor="#1b2c38"
        android:background="@drawable/dialog_button_default"
        android:textSize="40sp"/>
    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1px"-->
        <!--android:background="#9e9e9e"-->
        />
    <TextView
        android:id="@+id/choosePhoto"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center"
        android:text="高级"
        android:background="@drawable/dialog_button_default"
        android:textColor="#1b2c38"
        android:textSize="40sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:text="点位会归类到所选类别。"
        android:textSize="32sp"
        android:textColor="@color/icon_blue"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:text=""
        android:layout_marginBottom="20dp"
        android:textSize="32sp"
        android:textColor="@color/icon_red"
        android:gravity="center"/>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#9e9e9e"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:weightSum="2">
        <TextView
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:gravity="center"
            android:text="取消"
            android:textColor="@android:color/black"
            android:textSize="35sp"/>

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#9e9e9e"/>
        <TextView
            android:id="@+id/confirm"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:gravity="center"
            android:text="确定"
            android:textColor="@android:color/black"
            android:textSize="35sp"/>

    </LinearLayout>

</LinearLayout>