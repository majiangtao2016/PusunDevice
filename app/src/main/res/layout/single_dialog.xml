<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:text="请选择练习方式"
        android:textColor="#1b2c38"
        android:textSize="25sp"
        />
    <TextView
        android:id="@+id/takePhoto"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:visibility="gone"
        android:gravity="center"
        android:text="正手"
        android:textColor="#1b2c38"
        android:background="@drawable/code_button_bg_default"
        android:textSize="25sp"/>
    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1px"-->
        <!--android:background="#9e9e9e"-->
        />
    <TextView
        android:id="@+id/choosePhoto"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center"
        android:visibility="gone"
        android:text="反手"
        android:background="@drawable/code_button_bg_default"
        android:textColor="#1b2c38"
        android:textSize="25sp" />
    <TextView
        android:id="@+id/tongguan"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:text="挑战通关前请先加满球。"
        android:textSize="21sp"
        android:textColor="@color/icon_red"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:text="确定后请回到对面场地准备接球。"
        android:textSize="21sp"
        android:textColor="@color/icon_red"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:textStyle="bold"
        android:text="请勿靠近出球口!"
        android:layout_marginBottom="20dp"
        android:textSize="21sp"
        android:textColor="@color/icon_red"
        android:gravity="center"/>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#9e9e9e"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:weightSum="2">
        <TextView
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:gravity="center"
            android:text="取消"
            android:textColor="@android:color/black"
            android:textSize="25sp"/>

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#9e9e9e"/>
        <TextView
            android:id="@+id/confirm"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:gravity="center"
            android:text="确定"
            android:textColor="@android:color/black"
            android:textSize="25sp"/>

    </LinearLayout>

</LinearLayout>