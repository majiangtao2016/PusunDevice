<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/icon_blue"
    android:padding="1dp"
    tools:context="com.health.pusun.device.ModeSelectActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:visibility="gone"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/power"
            android:layout_width="67dp"
            android:layout_height="30dp"
            android:scaleType="centerInside"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/power_zero"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp"
            android:background="@drawable/head_bg"/>

        <ImageView
            android:id="@+id/head_img"
            android:layout_width="194dp"
            android:layout_height="194dp"
            android:layout_marginTop="93dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerInside"/>
        <TextView
            android:id="@+id/nick_name"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_below="@+id/head_img"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="46sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            />

        <TextView
            android:id="@+id/time_start"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/nick_name"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/white"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/time_end"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/time_start"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="28sp" />

    </RelativeLayout>

    <com.dueeeke.videoplayer.player.VideoView
        android:id="@+id/player"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:visibility="gone"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/info_game"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="10dp"
        android:visibility="gone"
        android:background="@drawable/info_game"
        android:layout_marginRight="10dp" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="1130dp"
        android:scaleType="fitXY"
        android:visibility="gone"
        android:src="@drawable/icon_notice"
        />
    <TextView
        android:id="@+id/activity"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="1130dp"
        android:gravity="center_vertical"
        android:ellipsize="marquee"
        android:focusable="true"
        android:singleLine="true"
        android:visibility="gone"
        android:marqueeRepeatLimit="marquee_forever"
        android:focusableInTouchMode="true"
        android:textSize="25sp"
        android:textColor="@android:color/white"/>
    <RelativeLayout
        android:id="@+id/mute"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:gravity="center"
        android:visibility="gone"
        android:background="@drawable/ic_no_volume"
        android:layout_marginTop="1000dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        >

        <ImageView
            android:id="@+id/icon_play"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:background="@drawable/icon_stop"/>

        <TextView
            android:id="@+id/start_ball_tv"
            android:layout_width="80dp"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_below="@+id/icon_play"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff"
            android:textSize="19sp"
            android:gravity="center"
            android:text="静音"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:layout_marginTop="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:weightSum="2"
            android:layout_marginRight="550dp"
            android:layout_marginTop="1dp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/btn_train"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_weight="1">
                <LinearLayout
                    android:id="@+id/back_train_single"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/switch_button_bg_left_selected">
                    <TextView
                        android:id="@+id/tv_single"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@android:color/white"
                        android:textSize="28sp"
                        android:gravity="center"
                        android:text="单项练习"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btn_study_video"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_weight="1">
                <LinearLayout
                    android:id="@+id/back_train_group"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/switch_button_bg_right_default">
                    <TextView
                        android:id="@+id/tv_group"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/mode_blue"
                        android:textSize="28sp"
                        android:gravity="center"
                        android:text="组合练习"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btn_study_game"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility="gone"
                android:gravity="center_vertical"
                android:layout_weight="1">
                <LinearLayout
                    android:id="@+id/back_game_group"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/switch_button_bg_right_default">
                    <TextView
                        android:id="@+id/tv_game"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/mode_blue"
                        android:textSize="32sp"
                        android:gravity="center"
                        android:text="专业模式"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    <com.kyleduo.switchbutton.SwitchButton
        android:id="@+id/switchbtn"
        android:layout_width="156dp"
        android:layout_height="70dp"
        android:visibility="gone"
        android:layout_marginRight="15dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        app:kswThumbColor="@color/white"
        app:kswThumbRadius="40dp"
        app:kswThumbWidth="56dp"
        app:kswThumbHeight="56dp"
        app:kswThumbMargin="5dp"
        app:kswBackMeasureRatio="2.2"
        app:kswTintColor="@color/icon_orange"
        app:kswBackColor="@drawable/switch_color_selector"
        app:kswTextOn="高级"
        app:kswTextOff="初级"
        android:textSize="36sp">

</com.kyleduo.switchbutton.SwitchButton>
    <LinearLayout
        android:id="@+id/stn"
        android:layout_marginRight="1dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="1dp"
        android:layout_height="70dp"
        android:orientation="vertical"/>

    <TextView
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:layout_toLeftOf="@+id/stn"
        android:layout_marginRight="5dp"
        android:textSize="26sp"
        android:text="级别:"/>

    <LinearLayout
        android:id="@+id/layout_fast"
        android:layout_width="140dp"
        android:layout_height="56dp"
        android:orientation="vertical"
        android:background="@drawable/code_button_bg_default"
        android:layout_marginRight="30dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/stn">
    </LinearLayout>
    <Spinner
        android:id="@+id/spinner_fast"
        android:layout_width="140dp"
        android:layout_height="56dp"
        android:layout_marginRight="30dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/stn"></Spinner>
     <TextView
         android:layout_width="70dp"
         android:layout_height="match_parent"
         android:gravity="center"
         android:layout_toLeftOf="@+id/spinner_fast"
         android:textSize="26sp"
         android:text="快速:"/>
    <LinearLayout
        android:id="@+id/layout_low"
        android:layout_width="140dp"
        android:layout_height="56dp"
        android:orientation="vertical"
        android:background="@drawable/code_button_bg_default"
        android:layout_marginRight="80dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/spinner_fast">
    </LinearLayout>
    <Spinner
        android:id="@+id/spinner_low"
        android:layout_width="140dp"
        android:layout_height="56dp"
        android:layout_marginRight="80dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/spinner_fast"
        android:layout_toRightOf="@+id/tip_categary"></Spinner>
    <TextView
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_toLeftOf="@+id/spinner_low"
        android:textSize="26sp"
        android:text="慢速:"/>
</RelativeLayout>
        <com.health.pusun.device.views.NoScrollViewPager
            android:id="@+id/fragmentPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/qr_code"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="100dp"
        android:scaleType="centerInside"/>
