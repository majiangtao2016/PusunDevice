<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gamebg"
    tools:context="com.health.pusun.device.game.GameIntroduceActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="150dp"
        android:background="@color/white"
        android:textSize="40dp"
        android:textColor="@color/black"
        android:gravity="center_horizontal"
        android:text="本关游戏时长五分钟,把球击中球框区域便可累计得分，命中率越高分数越高！"/>
    <RelativeLayout
        android:id="@+id/start_ball"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:gravity="center"
        android:background="@drawable/stop"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="40dp"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/icon_play"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/continue_play"/>

        <TextView
            android:id="@+id/start_ball_tv"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/icon_play"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff"
            android:textSize="22sp"
            android:gravity="center"
            android:text="开始游戏"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/back_ball"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:gravity="center"
        android:background="@drawable/back_button"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="240dp"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/icon_back"
            android:layout_width="90dp"
            android:layout_height="64dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/back_video"/>

        <TextView
            android:id="@+id/back_ball_tv"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/icon_back"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff"
            android:textSize="22sp"
            android:gravity="center"
            android:text="返回"/>

    </RelativeLayout>


</RelativeLayout>
