<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.health.pusun.device.test.TestPasswordActivity">

    <TextView
        android:id="@+id/notice1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:textSize="32sp"
        android:textColor="@color/black"
        android:text="参数设置仅供管理员使用"/>
    <TextView
        android:id="@+id/notice2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="150dp"
        android:gravity="center"
        android:textSize="32sp"
        android:textColor="@color/black"
        android:text="请输入设备管理密码："/>

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:inputType="textPassword"
        android:textSize="30sp"
        android:layout_marginLeft="130dp"
        android:layout_marginRight="130dp"
        android:layout_marginTop="216dp"/>

    <Button
        android:id="@+id/btn"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_marginTop="355dp"
        android:layout_marginLeft="150dp"
        android:layout_marginRight="50dp"
        android:text="确认"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:gravity="center"
        android:background="@drawable/corner_button_blue_default"
        />

    <Button
        android:id="@+id/colse_btn"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_marginTop="415dp"
        android:layout_marginLeft="150dp"
        android:layout_marginRight="50dp"
        android:text="返回"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:gravity="center"
        android:background="@drawable/corner_button_blue_default"
        />

</RelativeLayout>
