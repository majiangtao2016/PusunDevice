<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".train.ProFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:visibility="visible"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/group_ball_1"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:background="@drawable/corner_button_blue_pressed"
                android:text="随机四方球" />

            <TextView
                android:id="@+id/group_ball_2"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:visibility="visible"
                android:textSize="30sp"
                android:textColor="@color/mode_blue"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:background="@drawable/code_button_bg_default"
                android:text="定点扑球" />

            <TextView
                android:id="@+id/group_ball_8"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_marginTop="15dp"
                android:textSize="30sp"
                android:visibility="invisible"
                android:textColor="@color/mode_blue"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:background="@drawable/code_button_bg_default"
                android:text="杀上网" />

            <TextView
                android:id="@+id/group_ball_9"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:visibility="invisible"
                android:textSize="30sp"
                android:textColor="@color/mode_blue"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:background="@drawable/code_button_bg_default"
                android:text="两侧杀上网" />


        </LinearLayout>
    </LinearLayout>

</LinearLayout>