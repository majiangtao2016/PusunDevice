<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="#aa7d7e7e"
    tools:context="com.health.pusun.device.EggInformActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="800dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="300dp"
        android:background="@drawable/corner_white_default"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="60dp"
            android:scaleType="centerInside"
            android:src="@drawable/egg1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="50dp"
            android:textSize="40dp"
            android:textColor="#f97a00"
            android:gravity="center_horizontal"
            android:text="感谢您连续的使用小尚哦。小尚赠送你一次一分钟杀球砸彩蛋赢大奖机会，把球杀向彩蛋次数越多，奖品越大哦。"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="30dp"
            android:textSize="32dp"
            android:textColor="@color/black"
            android:gravity="center_horizontal"
            android:text="请点击开始挑战按钮！"/>

    </LinearLayout>

    <TextView
        android:id="@+id/close"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="250dp"
        android:scaleType="center"
        android:text="开始挑战"
        android:textSize="36sp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@color/icon_blue"
        android:background="@drawable/corner_button_blue_pressed"/>

    <TextView
        android:id="@+id/cancel"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:scaleType="center"
        android:text="取消"
        android:textSize="36sp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@color/icon_blue"
        android:background="@drawable/corner_button_blue_pressed"/>

</RelativeLayout>
