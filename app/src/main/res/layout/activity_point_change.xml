<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:keepScreenOn="true"
    android:background="@color/bg_color"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:background="@color/black">

        <TextView
            android:id="@+id/back"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="返回"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/code_button_bg_default"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:text="发球位置微调"/>

        <TextView
            android:id="@+id/reverse1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="恢复出厂设定"
            android:visibility="gone"
            android:textSize="25sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:background="@drawable/code_button_bg_default"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="18dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tip_categary"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginLeft="40dp"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:text="发球落点调整"/>



        <TextView
            android:id="@+id/reverse"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_toRightOf="@+id/tip_categary"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:text="恢复出厂设定"
            android:textColor="@color/black"
            android:textSize="23sp"
            android:layout_marginLeft="60dp"
            android:background="@drawable/code_button_bg_default"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="430dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="35dp"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/tip_lr"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="25dp"
                    android:gravity="center"
                    android:text="左右角度调整："
                    android:textColor="@android:color/black"
                    android:textSize="25sp"/>
                <TextView
                    android:id="@+id/degree1"
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/tip_lr"
                    android:textSize="25sp"
                    android:text="0"
                    android:gravity="center"
                    android:inputType="number"
                    android:background="@drawable/code_button_bg_default"
                    android:layout_marginLeft="5dp"/>
                <TextView
                    android:id="@+id/minus_lr"
                    android:layout_width="70dp"
                    android:layout_height="80dp"
                    android:text="-"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_toRightOf="@+id/tip_lr"
                    android:layout_marginLeft="5dp"
                    android:textSize="25sp"
                    android:background="@color/transparent"
                    />
                <TextView
                    android:layout_width="1dp"
                    android:layout_height="80dp"
                    android:background="@color/black"
                    android:layout_toRightOf="@+id/minus_lr"/>
                <TextView
                    android:id="@+id/add_lr"
                    android:layout_width="70dp"
                    android:layout_height="80dp"
                    android:text="+"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_toRightOf="@+id/tip_lr"
                    android:layout_marginLeft="180dp"
                    android:textSize="25sp"
                    android:background="@color/transparent"
                    />
                <TextView
                    android:layout_width="1dp"
                    android:layout_height="80dp"
                    android:background="@color/black"
                    android:layout_alignLeft="@+id/add_lr"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="30dp"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/tip_ud"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="25dp"
                    android:gravity="center"
                    android:text="上下角度调整："
                    android:textColor="@android:color/black"
                    android:textSize="25sp"/>
                <TextView
                    android:id="@+id/degree2"
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/tip_ud"
                    android:textSize="25sp"
                    android:text="0"
                    android:gravity="center"
                    android:inputType="number"
                    android:background="@drawable/code_button_bg_default"
                    android:layout_marginLeft="5dp"/>
                <TextView
                    android:id="@+id/minus_ud"
                    android:layout_width="70dp"
                    android:layout_height="80dp"
                    android:text="-"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_toRightOf="@+id/tip_ud"
                    android:layout_marginLeft="5dp"
                    android:textSize="25sp"
                    android:background="@color/transparent"
                    />
                <TextView
                    android:layout_width="1dp"
                    android:layout_height="80dp"
                    android:background="@color/black"
                    android:layout_toRightOf="@+id/minus_ud"/>
                <TextView
                    android:id="@+id/add_ud"
                    android:layout_width="70dp"
                    android:layout_height="80dp"
                    android:text="+"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_toRightOf="@+id/tip_ud"
                    android:layout_marginLeft="180dp"
                    android:textSize="25sp"
                    android:background="@color/transparent"
                    />
                <TextView
                    android:layout_width="1dp"
                    android:layout_height="80dp"
                    android:background="@color/black"
                    android:layout_alignLeft="@+id/add_ud"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="30dp"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/tip_ve"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="25dp"
                    android:gravity="center"
                    android:text="发球速度调整："
                    android:textColor="@android:color/black"
                    android:textSize="25sp"/>
                <TextView
                    android:id="@+id/velo"
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/tip_ve"
                    android:textSize="25sp"
                    android:text="0"
                    android:gravity="center"
                    android:inputType="number"
                    android:background="@drawable/code_button_bg_default"
                    android:layout_marginLeft="5dp"/>
                <TextView
                    android:id="@+id/minus_ve"
                    android:layout_width="70dp"
                    android:layout_height="80dp"
                    android:text="-"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_toRightOf="@+id/tip_ve"
                    android:layout_marginLeft="5dp"
                    android:textSize="25sp"
                    android:background="@color/transparent"
                    />
                <TextView
                    android:layout_width="1dp"
                    android:layout_height="80dp"
                    android:background="@color/black"
                    android:layout_toRightOf="@+id/minus_ve"/>
                <TextView
                    android:id="@+id/add_ve"
                    android:layout_width="70dp"
                    android:layout_height="80dp"
                    android:text="+"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_toRightOf="@+id/tip_ve"
                    android:layout_marginLeft="180dp"
                    android:textSize="25sp"
                    android:background="@color/transparent"
                    />
                <TextView
                    android:layout_width="1dp"
                    android:layout_height="80dp"
                    android:background="@color/black"
                    android:layout_alignLeft="@+id/add_ve"/>
            </RelativeLayout>
            <Button
                android:layout_marginTop="35dp"
                android:id="@+id/send"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="120dp"
                android:layout_marginRight="45dp"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:background="@drawable/code_button_bg_default"
                android:text="确  认"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="500dp"
            android:layout_height="320dp"
            android:background="@drawable/bg_adjust_direction_trans"
            android:layout_marginBottom="120dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="35dp"
            android:layout_marginRight="30dp">
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>